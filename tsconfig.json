{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@scripts/*": ["src/scripts/*"],
      "@assets/*": ["src/assets/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
      {
        "name": "@astrojs/tailwind"
      },
      {
        "name": "@astrojs/mdx"
      },
      {
        "name": "@astrojs/language-server"
      }
    ]
  }
}
