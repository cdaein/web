---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import { parseSlug } from "@scripts/utils";
import ActivityList from "@components/mdx/ActivityList.astro";

export async function getStaticPaths() {
  const workEntries = await getCollection("work");
  const writingEntries = await getCollection("writing");

  const entries = [...workEntries, ...writingEntries];

  return entries.map((entry) => {
    // entry.slug format: YYYY/YYMMDD-work-title
    const slug = parseSlug(entry.slug);

    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <Content />
  <ActivityList slug={Astro.params.slug} />
</Layout>
