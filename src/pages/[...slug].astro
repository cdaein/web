---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import { parseSlug } from "@scripts/utils";
import Prose from "@components/mdx/Prose.astro";

export async function getStaticPaths() {
  const workEntries = await getCollection("work", ({ data }) => {
    // include only published posts in build. for dev, include all posts
    return import.meta.env.PROD ? data.published === true : true;
  });
  // const writingEntries = await getCollection("writing", ({ data }) => {
  //   return import.meta.env.PROD ? data.draft !== true : true;
  // });

  const documentationEntries = await getCollection("documentation", ({ data }) => {
    return import.meta.env.PROD ? data.published === true : true;
  });

  // const allPosts = [...workEntries, ...writingEntries];
  const allWorkPosts = [...workEntries].sort(
    (a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime(),
  );

  const numPosts = allWorkPosts.length;

  const workPaths = allWorkPosts.map((post, i) => {
    // entry.slug format: YYYY/YYMMDD-work-title
    const slug = parseSlug(post.slug);

    // console.log(post);

    return {
      params: { slug },
      props: {
        post,
        prevPost: i === numPosts - 1 ? undefined : allWorkPosts[i + 1],
        nextPost: i === 0 ? undefined : allWorkPosts[i - 1],
      },
    };
  });

  const documentationPaths = documentationEntries.map((post) => ({
    params: { slug: `documentation/${parseSlug(post.slug)}` },
    props: { post, prevPost: undefined, nextPost: undefined },
  }));

  return [...workPaths, ...documentationPaths];
}

const { post, prevPost, nextPost } = Astro.props;

const { Content } = await post.render();
---

<Layout
  title={post.data.title}
  description={post.data.description ?? post.data.title}
  post={post}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Prose>
    <Content />
  </Prose>
</Layout>
