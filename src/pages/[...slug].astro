---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import { parseSlug } from "@scripts/utils";

export async function getStaticPaths() {
  // REVIEW: is there a way to combine collections?
  const workEntries = await getCollection("work");
  const writingEntries = await getCollection("writing");

  const entries = [...workEntries, ...writingEntries];

  return entries.map((entry) => {
    // entry.slug format: YYYY/YYMMDD-work-title
    // ex: "2022/220304-growth-one"
    const slug = parseSlug(entry.slug);

    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title="test work post">
  <Content />
</Layout>
