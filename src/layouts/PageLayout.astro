---
// import "@fontsource-variable/inter"; // safe option
import "@fontsource-variable/karla"; // wider tracking

import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageHeader from "@components/mdx/PageHeader.astro";
import Prose from "@components/mdx/Prose.astro";

interface Props {
  file: string;
  url: string;
  content: {
    // looks the same as frontmatter
  };
  frontmatter: {
    title: string;
    description?: string;
    date: string;
    category?: string;
    tags?: string[];
    draft?: boolean;
    file: string;
    url: string;
  };
  heading: any[];
}

const {
  frontmatter: { title, description },
} = Astro.props;

// const pathname = Astro.url.pathname;
// const isRoot = pathname === "/";
---

<html lang="en" class="h-full">
  <Head title={title} description={description} />

  <body class="h-full text-xl">
    <Header />
    <PageHeader page={Astro.props.frontmatter} />
    <div class="flex flex-col h-full">
      <main class="mt-0 grow">
        <Prose>
          <slot />
        </Prose>
      </main>
      <Footer class="" />
    </div>
  </body>
</html>
