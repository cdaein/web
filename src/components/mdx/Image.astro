---
import { Image as AstroImage } from "astro:assets";

// interface Props {
//   alt: string;
//   image: string;
//   caption?: string;
// }

const { alt, src, caption } = Astro.props;
---

<figure>
  <AstroImage src={src} alt={alt} />
  {
    caption ? (
      <figcaption>{caption}</figcaption>
    ) : (
      <figcaption>{alt}</figcaption>
    )
  }
</figure>
