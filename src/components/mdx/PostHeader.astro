---
// NOTE:
// - On index page: single line with fadeout for overflow, fixed height
// - On post pages: full title display, fixed positioning, dynamic height
// - spacer: invisible duplicate in document flow to push content down

import moment from "moment";
import type { CollectionEntry } from "astro:content";
import { camelcase } from "@scripts/utils";

type Props = {
  post: CollectionEntry<"work" | "writing">;
  prevPost?: CollectionEntry<"work" | "writing">;
  nextPost?: CollectionEntry<"work" | "writing">;
  class?: string;
  /** Render as invisible spacer in document flow */
  spacer?: boolean;
};

const { post, class: className, spacer = false } = Astro.props;
const {
  data: { title, description, date, category, published },
} = post;

// if not root, add page navagation
const pathname = Astro.url.pathname;
const isRoot = pathname === "/";
---

<style is:global>
  .fadeout:before {
    content: "";
    width: 10%;
    height: 100%;
    position: absolute;
    right: 0px;
    top: 0;
    background: linear-gradient(to right, transparent 10px, white 80%);
    overflow: hidden;
    pointer-events: none;
  }
</style>

{
  isRoot && <style is:global>
    article:hover .fadeout:before {
      background: linear-gradient(to right, transparent 10px, black 80%);
    }
  </style>
}

<article
  class:list={[
    "bg-white",
    isRoot ? "border-b" : "border-b-2",
    "border-b-black leading-snug z-10",
    isRoot && "h-18",
    !isRoot && !spacer && "fixed top-9 w-full",
    !isRoot && spacer && "invisible w-full",
    isRoot && "hover:bg-black hover:text-white",
    className,
  ]}
>
  <div class="group">
    <div
      class:list={[
        "py-1 relative grid grid-cols-12 gap-x-2 md:gap-x-8",
        "max-w-screen-xl m-auto",
      ]}
    >
        <h1 class:list={[
          "m-0 overflow-hidden",
          isRoot && "whitespace-nowrap fadeout",
          "relative pl-4 col-start-1 col-end-9",
          "md:pl-4 md:col-end-5",
          "lg:col-end-4",
          "flex justify-start"
        ]}>
        {!published && <span class="text-red-500 font-semibold">(NOT PUBLISHED)</span>}
        {title}
        </h1>
        <h2 class:list={[
          // this is too differentiate from main h2 of the actual content
          "post-header",
          "m-0 overflow-hidden",
          isRoot && "whitespace-nowrap fadeout",
          "relative",
          "hidden col-start-4 col-end-10",
          "md:col-start-5 md:col-end-11 md:flex",
          "lg:col-start-4 lg:col-end-10",
          "justify-start"
        ]}>
          {
            description && description[description.length - 1] === "."
              ? description?.substring(0, description.length - 1)
              : description
          }
        </h2>
        <span class:list={[
          "whitespace-nowrap overflow-hidden",
          "hidden col-start-8 col-end-12",
          "lg:col-start-10 lg:col-end-12 lg:flex",
          "justify-start"
        ]}>{category && camelcase(`${category}`)}</span>
        <span class:list={[
          "whitespace-nowrap overflow-hidden",
          "pr-4 col-start-10 col-end-13",
          "md:col-start-11",
          "lg:col-start-12",
          "flex justify-end"
        ]}>{moment(date).year()}</span>
      <!-- <span class="col-start-4 col-end-12 flex justify-start" -->
      <!--   >{tags && tags.map((tag: any) => `${tag}`)}</span -->
      <!-- > -->
    </div>
  </div>
</article>
