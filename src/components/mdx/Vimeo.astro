---
const { id, width, height } = Astro.props;
const aspectRatio = height / width || 0.5625; // default is 16:9
const paddingTop = aspectRatio * 100 + "%";
---

<div style={{ paddingTop, position: "relative", backgroundColor: "#c0c0c0" }}>
  <iframe
    title="vimeo-player"
    src={`https://player.vimeo.com/video/${id}?title=0&byline=0&portrait=0`}
    style={{
      position: "absolute",
      top: 0,
      left: 0,
      width: "100%",
      height: "100%",
    }}
    frameborder="0"
    allow="autoplay; fullscreen; picture-in-picture"
    allowfullscreen></iframe>
</div>
