// NOTE:
// - `#t=0.001` is to advance video time slightly to force iOS Safari to display video poster image.
//   reference: https://www.sitelint.com/blog/fixing-html-video-autoplay-blank-poster-first-frame-and-improving-performance-in-safari-and-ios-devices

type Props = {
  /** Path string */
  src: string;
  poster?: string;
  title?: string;
  caption?: string;
  width?: number;
  height?: number;
  controls?: boolean;
  autoplay?: boolean;
  /** Additional classes to add to the wrapper div */
  mb?: boolean;
  class?: string;
};
const {
  src,
  poster,
  title,
  // caption,
  width,
  height,
  controls = true,
  autoplay = false,
  mb,
  class: className,
} = Astro.props;

const w = width || 1080;
const h = height || 1080;
---

<style is:global define:vars={{ w, h }}>
  video.video {
    width: 100%;
    aspect-ratio: var(--w) / var(--h);
  }
</style>

<div class:list={["video-wrapper bg-gray-500", mb && "mb-8", className]}>
  <video
    src={`${src}#t=0.001`}
    poster={poster}
    title={title}
    width={width}
    height={height}
    controls={controls}
    loop
    muted
    playsinline
    autoplay={autoplay}
    class:list={["video", "w-full h-full object-cover"]}
  >
  </video>
</div>
